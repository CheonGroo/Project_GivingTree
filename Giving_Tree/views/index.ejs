	<script>
    	let data = JSON.parse('<%- JSON.stringify(data) %>');
		console.log(data);
		let id = 15;
		showItemsFunction(data) 		
		
		let startingNo = 4;
		
		$('#loadMore').click(function() {
			let dataAdd = {'category': 1, 'startingNo': startingNo}
			
			$.ajax({
				"url": '/loadMore',
				"type": 'post',
				"datatype": 'json',
				"data": dataAdd,
				"success": function(results) {
					data = results.data;
					showItemsFunction(data);
					startingNo = startingNo + 4;
				}
			});
		})
		
		function showItemsFunction(data) {
			// $('#products').text = '';
			let str = '';
			for (let i=0; i<data.length; i++) {
				str = str + '<div class="col-md-6 col-lg-3">' +
							'<div class="product">' +
							  '<figure class="product-image">' +
								'<a href="/product/'+ id +'">' +
								  '<img src="' + data[i].image1 + '" alt="Image" style="height:300px; width:180px;">' +
								  '</a>' +
							  '</figure>' +
							  '<div class="product-meta">' +
								'<h3 class="product-title"><a href="product-classic.html">' + data[i].name + '</a></h3>' +
								'<div class="product-price">' +
								  '<span>' + data[i].price1 + '원 </span>' +
								  '<span style="color:green; font-weight: bold; padding-left:95px">' + data[i].donate + '% </span>' +
								  '<span class="product-action">' +
								  '</span>' +
								'</div>' +
							  '</div>' +
							'</div>' +
						  '</div>';
				id--;
			}

			$('#products').append(str);
		}
		
		
		
		
		
