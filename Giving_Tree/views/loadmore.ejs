				"data": {'category': 1},
				"success": function(results) {
					data = results.aaa;
					showItemsFunction(data);
				}
			});
		})
		
		$('#filter_top').click(function() {
			$.ajax({
				"url": 'aaa',
				"type": aaa,
				"datatype": aaa,
				"data": {'category': 2},
				"success": function(results) {
					data = results.aaa;
					showItemsFunction(data);
				}
			});
		})
		
		function showItemsFunction(data) {
			$('#products').text = '';
			let str = '';
			for (let i=0; i<data.length; i++) {
				str = str + '<div class="col-6 col-lg-3">' +
							'<div class="product">' +
							  '<figure class="product-image">' +
								'<a href="/product">' +
								  '<img src="' + data[i].image1 + '" alt="Image">' +
								  '</a>' +
							  '</figure>' +
							  '<div class="product-meta">' +
								'<h3 class="product-title"><a href="product-classic.html">' + data[i].name + '</a></h3>' +
								'<div class="product-price">' +
								  '<span>$100</span>' +
								  '<span class="product-action">' +
								  '</span>' +
								'</div>' +
							  '</div>' +
							'</div>' +
						  '</div>';
			}

			$('#products').append(str);
		}
		
		

    </script>
