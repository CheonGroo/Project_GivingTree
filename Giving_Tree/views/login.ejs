		$(document).ready(function() {

			console.log('start');
			$('#btn_login').click(function(){
				$('.warning').text('');

				console.log('Login button clicked');
				let email = $('#exampleInputEmail1').val();
				console.log(email);

				let pw1 = $('#exampleInputPassword1').val();
				console.log(pw1);

				let flag = 0;
				if (email){
					console.log('Email okay');
				}
				else {
					console.log('Email을 입력하지 않았습니다.');
					$('#warning1').text('Email을 입력하세요!');
					flag = 1;
				}


				if (pw1){
					console.log('Password1 okay');
				}
				else {
					console.log('패스워드를 입력하지 않았습니다.');
					$('#warning2').text('패스워드를 입력해주세요!');
					flag = 1;
				}

				if (flag == 0) {
					if (email == 'admin@handong.ac.kr') {
						localStorage.setItem('status','admin');
						location.href = '/';
					}
					else if (email == 'user@handong.ac.kr'){
						localStorage.setItem('status','user');
						location.href = '/';
					}
					else{
						localStorage.setItem('status','none');
						location.href = '/';
					}
				}
			});
	});
	</script>
	  
